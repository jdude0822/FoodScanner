<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="senior_project.foodscanner" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activities.MealCalendarActivity"
            android:label="@string/title_activity_meal_calendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PaintingActivity"
            android:label="@string/title_activity_painting"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MealDetailsActivity"
            android:label="@string/title_activity_meal_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PhotoTakerActivity"
            android:label="Photo Taker"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.FoodItemActivity"
            android:label="@string/title_activity_food_adder"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsManualTimes"
            android:label="@string/title_activity_settings_set_times"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.CameraActivity"
            android:label="Camera"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="senior_project.foodscanner.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FoodDensityActivity"
            android:label="@string/title_activity_food_density"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>
